<main>
  <div class="container">
    <div class="row">
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
         <h2 class="bg-secondary d-inline p-2">ログイン</h2>

         <h5 class="bg-secondary d-inline p-2">会員の方はこちらからログイン</h5>
         <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         <%= render "customers/shared/error_messages", resource: resource %>
         <div class="field">
           <%= f.label :email, "メールアドレス" %></br>
           <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
         </div>

         <div class="field">
           <%= f.label :password, "パスワード" %></br>
           <%= f.password_field :password, autocomplete: "current-password" %>
         </div>

         <div class="actions">
           <%= f.submit "ログイン", class:"btn btn-primary" %>
         </div>
         <% end %>

         <h5 class="bg-secondary d-inline p-2">会員登録がお済みでない方</h5>
         <%= link_to "こちら", new_customer_registration_path %>からログインをして下さい。
      </div>
    </div>
  </div>
</main>
