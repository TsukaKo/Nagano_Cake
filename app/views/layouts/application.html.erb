<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
  <header>
   <nav class="navbar navbar-expand-lg navbar-light bg-light">
     <div class="container">
         <a class="navbar-brand">
             <button type="button" class="btn btn-outline-dark" >LOGO</button>
         </a>
         <ul class="nav justify-content-end">
           <li class="nav-item">
             <%= link_to admin_items_path do %>
               <button type="button" class="btn btn-outline-dark">商品一覧</button>
             <% end %>
           </li>
           <li class="nav-item">
             <%= link_to admin_customers_path do %>
               <button type="button" class="btn btn-outline-dark">会員一覧</button>
             <% end %>
           </li>
           <li class="nav-item">
             <%= link_to root_path do %>
               <button type="button" class="btn btn-outline-dark">注文履歴一覧</button>
             <% end %>
           </li>
           <li class="nav-item">
             <%= link_to admin_genres_path do %>
               <button type="button" class="btn btn-outline-dark">ジャンル一覧</button>
             <% end %>
           </li>
           <li class="nav-item">
             <%= link_to "ログアウト",destroy_customer_session_path,method: :delete, class:"btn btn-outline-dark"  %>
           </li>
         </ul>
     </div>
   </nav>
  </header>
  <%= yield %>
  </body>
</html>
