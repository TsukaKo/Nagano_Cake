<h5 class="bg-secondary d-inline px2">会員一覧</h5>

<table class="table" >
  <thead>
    <tr>
      <th scope="col">会員ID</th>
      <th scope="col">氏名</th>
      <th scope="col">メールアドレス</th>
      <th scope="col">ステータス</th>
    </tr>
  </thead>


  <tbody>
  　<% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td>
        <%= link_to admin_customer_path(customer.id) do %>
          <%= customer.name %>
        <% end %>
      </td>
      <td><%= customer.email %></td>
      <td>
        <% if customer.is_active == true %>
         <p>有効</p>
         <% else %>
         <p>退会</p>
        <% end %>

      </td>
    </tr>
  　<% end %>
  </tbody>
</table>
<%= paginate @customers %>