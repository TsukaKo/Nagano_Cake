<div class="container px-8 px-sm-12 mx-auto">
  <div class="row">
    <div class="col">
      <h4 class="bg-secondary d-inline px2"><%= @customer.name %>さんの会員詳細</h4>
    </div>
    <div class="row">
      <div class="col">
        <h4>会員ID</h4>
        <p><%= @customer.id %></p>
        <%= form_with model:@customer, url: admin_customer_path(@customer.id), local:true do |f| %>
        <h4>氏名</h4>
        <%= f.text_field :first_name %>
        <%= f.text_field :last_name %>
        <h4>フリガナ</h4>
        <%= f.text_field :first_name_kana %>
        <%= f.text_field :last_name_kana %>
        <h4>郵便番号</h4>
        <%= f.text_field :postal_code %>
        <h4>住所</h4>
        <%= f.text_field :address %>
        <h4>電話番号</h4>
        <%= f.text_field :telephone_number %>
        <h4>メールアドレス</h4>
        <%= f.text_field :email %>
        <h4>会員ステータス</h4>
        <%= f.radio_button :is_active_method, "valid" %>
        <%= f.label :is_active_method, "有効" %>
        <%= f.radio_button :is_active_method, "Withdrawal" %>
        <%= f.label :is_active_method, "退会" %>
        <%= f.submit "変更を保存", class:"btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


