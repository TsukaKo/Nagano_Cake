<div class="cocntainer px-8 px-sm-12 mx-auto">
  <div class="row">
    <div class="col">
      <h5 class="bg-secondary d-inline px2">注文履歴一覧</h5>
      <table class="table">
        <thead>
         <tr>
          <th scope="col">購入日時</th>
          <th scope="col">購入者</th>
          <th scope="col">注文個数</th>
          <th scope="col">注文ステータス</th>
         </tr>
        </thead>
        <tbody>
        <%= @orders_details.each do |orders_detail| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order.id) do %>
                <%= order_detail.created_at %>
              <% end %>
            </td>
            <td><%= order_detail.name %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.making_status %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>