<div class="container px-8 px-sm-12 mx-auto">
  <div class="row">
    <div class="col">
      <h5 class="bg-secondary d-inline px2">商品新規登録</h5>
      <%= form_with model:@item, url:admin_item_path, local:true do |f| %>
        <h4>商品画像</h4>
         <%= f.attachment_field :image %>
        <h4>商品名</h4>
        <%= f.text_field :name %>
        <h4>商品説明</h4>
        <%= f.text_area :introduction %>
        <h4>ジャンル</h4>
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
        <h4>税抜価格</h4>
        <%= f.text_area :price %>円
        <h4>販売ステータス</h4>
        <%= f.radio_button :is_active, "on_sale" %>
        <%= f.label :is_active, "販売中" %>

        <%= f.radio_button :is_active, "Stop selling" %>
        <%= f.label :is_active, "販売停止中" %>
        <%= f.submit "新規登録", class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>