
<h5 class="bg-secondary d-inline px2">商品一覧</h5>
<table class="table" >
  <tr>
    <th scope="col">商品id</th>
    <th scope="col">商品名</th>
    <th scope="col">税抜価格</th>
    <th scope="col">ジャンル</th>
    <th scope="col">ステータス</th>
  </tr>

  <tbody>
    <% @items.each do |item| %>
    <tr>
      <th scope="row"></th>
      <%= link_to admin_item_path(item.id) do %>
        <td><%= item.name %></td>
      <% end %>
      <td><%= item.price %></td>
      <td><%= item.genre_id %></td>
      <td><%= item.is_active %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @items %>