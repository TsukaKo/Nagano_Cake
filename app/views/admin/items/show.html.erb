<div class="container px-8 px-sm-12 mx-auto">
  <div class="row">
    <div class="col">
      <h5 class="bg-secondary d-inline px2">商品詳細</h5>

        <%= attachment_image_tag @item, :image %>

        <h4>商品名</h4>
        <p><%= @item.name %></p>
        <h4>商品説明</h4>
        <a><%= @item.introduction %></a>
        <h4>ジャンル</h4>
        <a><%= @item.genre.name %></a>
        <h4>
          税込価格</br>
          (税抜価格)
        </h4>
        <%= (@item.price * 1.1).floor %>
        (<%= @item.price %>)
        <a></a>
        <h4>販売ステータス</h4>
        <a>
          <% if @item.is_active == true %>
            <p>販売中</p>
          <% else %>
            <p>販売停止中</p>
          <% end %>
        </a>
        <%= link_to edit_admin_item_path(@item.id) do %>
          <button type="button" class="btn btn-success">編集する</button>
        <% end %>


    </div>
  </div>
</div>