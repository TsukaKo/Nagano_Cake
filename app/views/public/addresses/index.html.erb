<div class="container px-8 px-sm-12 mx-auto">
  <div class="row">
    <div class="col">
      <h4 class="bg-secondary d-inline p-2">
       　配送先登録/一覧
     </h4>
     <%= form_with model:@address, url: addresses_path, local:true do |f| %>
     <div class="form-group">
       <h5>郵便番号（ハイフンなし）</h5>
       <%= f.text_field :postal_code %>
     </div>
     <div class="form-group">
       <h5>住所</h5>
       <%= f.text_field :address %>
     </div>
     <div class="form-group">
       <h5>宛名</h5>
       <%= f.text_field :name %>
     </div>
     <%= f.submit "新規登録", class:"btn btn-success" %>
     <% end %>
     <table class="table table-bordered">
       <thead>
         <tr>
           <th scope="col">郵便番号</th>
           <th scope="col" >住所</th>
           <th scope="col">宛名</th>
           <th scope="col"></th>
         </tr>
       </thead>
       <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to edit_address_path(address.id) do %>
                <button type="button" class="btn btn-success">編集する</button>
              <% end %>
              <%= link_to "削除する" address_path class="btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
            </td>
          </tr>
        <% end %>
       </tbody>
     </table>
    </div>
  </div>
</div>
