<div class="container px-8 px-sm-12 mx-auto">
  <h4 class="bg-secondary d-inline p-2">
    注文履歴詳細
  </h4>
  <div class="row">
    <div class="col">
      <h5>注文情報</h5>
      <table class="table table-bordered">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at %></td>
          <th>配送先</th>
          <td>
            〒<%= @order.postal_code %>
              <%= @order.addresses %>
              <%= @order.name %>
          </td>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
          <th>ステータス</th>
          <td></td>
        </tr>
      </table>
    </div>
    <div class="col">
      <h5>請求情報</h5>
      <table class="table table-bordered">
        <tr>
          <th>商品合計</th>
          <td><%= @order.billing_amount - @order.postage %></td>
          <th>配送料</th>
          <td><%= @order.postage %></td>
          <th>ご請求額</th>
          <td><%= @order.billing_amount %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h5>注文内容</h5>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">商品</th>
            <th scope="col">単価（税込）</th>
            <th scope="col">個数</th>
            <th scope="col">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.price_add_tax %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.item.price_add_tax * order_detail.amount %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>