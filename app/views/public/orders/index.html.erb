<div class="container px-8 px-sm-12 mx-auto">
  <div class="row">
    <div class="col">
      <h4 class="bg-secondary d-inline px2">注文情報入力</h4>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">注文日</th>
            <th scope="col">配送先</th>
            <th scope="col">注文商品</th>
            <th scope="col">支払金額</th>
            <th scope="col">ステータス</th>
            <th scope="col">注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at %></td>
            <td>
              〒<%= order.postal_code %>
              <%= order.addresses %>
              <%= order.name %>
            </td>
            <% order.order_details.each do |order_detail| %>
            <td><%= order_detail.item.name %></td>
            <% end %>
            <td><%= order.billing_amount %></td>
            <td><%=%></td>
            <td><%= link_to "表示する", order_path(order.id), class:"btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>